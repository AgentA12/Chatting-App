{{#if loggedIn}}
  <div class="modal-blur ">
{{else}}
  <div class="modal-blur blur ">
{{/if}}
<header>
  <div class="container">
    <section class="row">
      <div class="col-md-6 col-9 d-flex align-items-center">

        <h1 class="main-logo">"Dev HangOut"</h1>

      </div>
      <div class="col-md-6 col-3 d-flex align-items-center justify-content-end gap-4">

        <button id="account-btn" class="hamburger">
          <div class="bar"></div>
        </button>
        <div class="dropdown">
          <img src="/images/icons8-settings-64.png" alt="settings" class="settings" height="46">
          <div class="dropdown-content">
            <a href="/settings" id="settings-link">Settings</a>

            <a href="#" id="logout-link">Logout</a>

          </div>
        </div>

      </div>
    </section>
  </div>
</header>


<!-- Modal content -->
