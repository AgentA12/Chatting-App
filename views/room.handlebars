{{#if loggedIn}}
<div class="modal-blur ">
  {{else}}
  <div class="modal-blur blur ">
    {{/if}}
    <header>
      <div class="container">
        <section class="row">
          <div class="col-md-6 col-9 d-flex align-items-center">

            <h1 class="main-logo">"Dev HangOut"</h1>

          </div>
          <div class="col-md-6 col-3 d-flex align-items-center justify-content-end gap-4">
           
            <button id="account-btn" class="hamburger">
              <div class="bar"></div>
            </button>
            <div class="dropdown">
              <img src="/images/icons8-settings-64.png" alt="settings" class="settings"  height="46">
              <div class="dropdown-content">
                <a href="/settings" id="settings-link">Settings</a>
               
                <a href="#" id="logout-link">Logout</a>
               
              </div>
            </div>

          </div>
        </section>
      </div>
    </header>

    <div class="account-slideout" id="explore-slide">
      <div class="slideout">
        <div class="container h-100">
          <div class="d-flex justify-content-center align-items-center mb-3 mt-2">
            <img src='' class='account-pfp' id="current-user-pfp"><img />
            <h2 id="slideout-username" class="slideout-current-username"></h2>

          </div>
          <h3 class="accordion-heading">Users</h3>
          <div class="list-container">
            <ul id="user-list" class="items-list text-right"></ul>
          </div>
          <h3 class="accordion-heading">Rooms</h3>
          <div class="list-container">
            <ul id="room-list" class="items-list">
              <li>General</li>
              <li>Front-End</li>
              <li>Back-End</li>
              <li>Dev-Advice</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <main class="chat-container container " id="main-chat">
      <h2 class="room-title" id="room-name"> <span style="color: #949494;"># </span>{{roomName}}</h2>
      <ul id="messages"></ul>
      <section class="row justify-content-center">
        <div class="col-md-10">
          <form id="chat-form">
            <input id="chat-input" placeholder="Send a message..."></input>
            <button>Send <i class="fa fa-caret-right" aria-hidden="true"></i></button>
          </form>
        </div>
      </section>
    </main>
  </div>

  {{#unless loggedIn}}
  {{> login-modal}}
  {{> signup-modal}}

  <script src="/js/signup.js"></script>
  <script src="/js/login.js"></script>
  {{/unless}}

  {{#if loggedIn}}
  <!-- script tag must be included in html to have access to the socket method -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/logout.js"></script>
  {{/if}}
  <script src="/js/logic.js"></script>