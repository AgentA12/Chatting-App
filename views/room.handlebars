  <div class="container">
    <div class="row">
      <div class="col-12 d-flex justify-content-start mt-4 ms-3">
        <div class=""><img src="" alt="user profile image" id="modal-pfp" class="modal-pfp-styles"></div>

        <div class="d-flex flex-column justify-content-end align-items-center">
          <img src="" class="col-3  " alt="" id="modal-fav-tech">
          <h5 id="modal-username" class="username-modal-styles text-center mt-3"></h5>
        </div>

      </div>
      <div class="col-12 ">
        <div class="d-flex align-items-center gap-2 mt-4 mb-2">
          <h5 class="m-0 ">GitHub</h5> <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
            viewBox="0 0 24 24">
